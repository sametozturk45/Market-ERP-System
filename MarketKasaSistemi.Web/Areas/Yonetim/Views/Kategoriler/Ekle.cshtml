@using MarketKasaSistemi.Entities
@model Kategori
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12 mx-auto mt-5">
    @using (Html.BeginForm("Ekle", "Kategoriler", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary();
        <div class="mb-3">
            @Html.LabelFor(x => x.KategoriAd, new { @class = "form-label offset-4" })
            <div class="col-md-4 mx-auto">
                @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3">
            <div class="col-md-10 offset-5">
                <a href="@Url.Action("Index","Kategoriler")" class="btn btn-danger ms-5"><i class="fa fa-close"></i> İptal</a>
                <button type="submit" class="btn btn-success"><i class="fa fa-plus-circle"></i> Ekle</button>
            </div>
        </div>
    }
</div>
