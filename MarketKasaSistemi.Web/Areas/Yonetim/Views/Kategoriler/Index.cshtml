@using MarketKasaSistemi.Entities
@model List<Kategori>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="table-responsive mt-2">
        <table class="table border border-2 col-12">
            <thead>
                <tr class="w-100 prm-one">
                    <th scope="col" class="fw-bold">ID</th>
                    <th scope="col" class="fw-bold">KATEGORİ ADI</th>
                    <th scope="col" class="text-center">
                        <a class="btn btn-primary" href="@Url.Action("Ekle","Kategoriler")"><i class="fa fa-user-plus"></i> EKLE</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="table-id">@item.Id</th>
                        <td>@item.KategoriAd</td>
                        <td class="text-center">
                            <a href="@Url.Action("Duzenle", "Kategoriler", new {id=item.Id})" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i></a>
                            <a href="@Url.Action("Sil", "Kategoriler", new {id=item.Id})" class="btn btn-danger btn-sm"><i class="fa fa-close"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>