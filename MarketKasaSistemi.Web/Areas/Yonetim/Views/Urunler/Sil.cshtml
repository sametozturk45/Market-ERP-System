@using MarketKasaSistemi.Entities
@model Urun
@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mt-4">Sil</h2>
<hr />
<p>@Model.UrunAd adına sahip ürünü silmek istediğinize emin misiniz ?</p>
@using (Html.BeginForm("Sil", "Urunler", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary();
    <div class="mb-3">
        <div class="col-md-3 mx-auto">
            <a href="@Url.Action("Index","Urunler")" class="btn btn-warning ms-5"><i class="fa fa-close"></i> İptal</a>
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</button>
        </div>
    </div>
}
