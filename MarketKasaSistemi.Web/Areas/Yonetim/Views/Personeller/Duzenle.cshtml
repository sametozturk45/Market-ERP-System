@using MarketKasaSistemi.Entities
@model Personel
@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12">
    @using (Html.BeginForm("Duzenle", "Personeller", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary();
        <div class="mb-3">
            @Html.LabelFor(x => x.PersonelAd, new { @class = "form-label offset-4 prm-one" })
            <div class="col-md-4 mx-auto">
                @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.PersonelSoyad, new { @class = "form-label offset-4 prm-one" })
            <div class="col-md-4 mx-auto">
                @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.PersonelTip, new { @class = "form-label offset-4 prm-one" })
            <div class="col-md-4 mx-auto">
                @Html.DropDownListFor(x => x.PersonelTip.Id,ViewBag.PersonelTip as SelectList, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3">
            <div class="col-md-3 mx-auto">
                <a href="@Url.Action("Index","Personeller")" class="btn btn-danger ms-5"><i class="fa fa-close"></i> İptal</a>
                <button type="submit" class="btn btn-warning"><i class="fa fa-thumbs-up"></i> Güncelle</button>
            </div>
        </div>
    }
</div>