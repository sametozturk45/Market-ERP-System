@using MarketKasaSistemi.Entities
@model List<Personel>
@{
    ViewBag.Title = "Personeller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="table-responsive mt-2">
        <table class="table border border-2 col-12">
            <thead>
                <tr class="w-100 prm-one">
                    <th scope="col" class="fw-bold">ID</th>
                    <th scope="col" class="fw-bold">AD</th>
                    <th scope="col" class="fw-bold">SOYAD</th>
                    <th scope="col" class="fw-bold">BAŞLANGIÇ</th>
                    <th scope="col" class="fw-bold">TÜR</th>
                    <th scope="col" class="text-center">
                        <a href="@Url.Action("Ekle","Personeller")" class="btn btn-primary"><i class="fa fa-user-plus"></i> EKLE</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row" class="table-id">@item.Id</th>
                        <td>@item.PersonelAd</td>
                        <td>@item.PersonelSoyad</td>
                        <td>@item.PersonelBaslangicTarih</td>
                        <td>@item.PersonelTipAd</td>
                        <td class="text-center">
                            <a href="@Url.Action("Duzenle", "Personeller", new {id=item.Id})" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i></a>
                            <a href="@Url.Action("Sil", "Personeller", new {id=item.Id})" class="btn btn-danger btn-sm"><i class="fa fa-close"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
